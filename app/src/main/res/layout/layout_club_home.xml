<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4511E"
    android:padding="0.5dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ivHomeClubImg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="clubName"
        android:id="@+id/tvHomeClubName"
        android:layout_toRightOf="@+id/ivHomeClubImg"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tvHomeClubDetails"
        android:layout_alignEnd="@+id/tvHomeClubDetails"
        android:textStyle="bold"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:background="#757575"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="clubName"
        android:id="@+id/tvHomeClubDetails"
        android:layout_toEndOf="@+id/ivHomeClubImg"
        android:layout_toRightOf="@+id/ivHomeClubImg"
        android:layout_below="@+id/tvHomeClubName"
        android:layout_alignBottom="@+id/ivHomeClubImg"
        android:fontFamily="sans-serif-light"
        android:background="#9E9E9E"
        />

</RelativeLayout>